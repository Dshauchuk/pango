<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="ExtraSmallFontSize">12</x:Double>
    <x:Double x:Key="SmallFontSize">13</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="TitleFontSize">16</x:Double>
    <x:Double x:Key="HeaderFontSize">18</x:Double>

    <Style x:Key="ExtraSmallTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource ExtraSmallFontSize}" />
    </Style>

    <Style x:Key="SmallTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
    </Style>

    <Style x:Key="BodyTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="TitleTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
    </Style>

    <Style x:Key="HeaderTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource HeaderFontSize}" />
    </Style>
    
</ResourceDictionary>
